#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html
# https://kivy.org/doc/stable/examples/gen__canvas__rotation__py.html
# By default all the sensors are stacked in once, unlike precious step, upon on first update the sensors takes
# its proper position

<Car>:
    size: 20, 10
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.center
            size: self.size
        PopMatrix

<Sensor1>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size
<Sensor2>:
    size: 10,10
    canvas:
        Color:
            rgba: 0,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size

<Sensor3>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,1,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<SelfDriveEnv>:
    car: id_car
    sensor1: id_sensor1
    sensor2: id_sensor2
    sensor3: id_sensor3

    Label:
        font_size: 14
        center_x: root.width / 4
        top: root.top - 50
        color: 1,0,0,0
        text: 's - toggle animation. use arrows to move & q/w - manual steering'

    Car:
        id: id_car
        center: self.parent.center
    Sensor1:
        id: id_sensor1
        center: self.parent.center
    Sensor2:
        id: id_sensor2
        center: self.parent.center
    Sensor3:
        id: id_sensor3
        center: self.parent.center
